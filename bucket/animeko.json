            "    }",
            "}",
            "New-Item \"$env:APPDATA\\Him188\\Ani\" -ItemType Junction -Target \"$persist_dir\" | Out-Null"
        ]
    },
    "uninstaller": {
        "script": "Remove-Item \"$env:APPDATA\\Him188\\Ani\" -Recurse -Force -ErrorAction 'SilentlyContinue'"
    },
